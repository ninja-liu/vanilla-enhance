{
  "name": "@vanilla-enhance/epromise",
  "version": "0.0.3-0",
  "description": "enhance vanilla Promise,provide practical methods",
  "type": "module",
  "source": "src/index.ts",
  "exports": {
    "require": "./dist/index.js",
    "default": "./dist/index.modern.js"
  },
  "main": "./dist/index.js",
  "module": "./dist/index.module.js",
  "unpkg": "./dist/index.umd.js",
  "files": [
    "dist/"
  ],
  "scripts": {
    "pretest": "tsc --noEmit",
    "test": "node test.js && npm run test:jest --",
    "clean": "rimraf ./dist",
    "build:tsc": "tsc",
    "prebuild": "npm run test:jest & npm run clean",
    "build": "microbundle",
    "dev": "microbundle watch",
    "test:jest": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "repository": {
    "type": "git",
    "url": "https://gitee.com/vanilla-enhance/epromise.git"
  },
  "keywords": [
    "enhanced",
    "Promise"
  ],
  "author": "XiaohuLiu",
  "publishConfig": {
    "access": "public"
  },
  "license": "ISC",
  "devDependencies": {
    "@types/jest": "^29.2.0",
    "jest": "^29.2.1",
    "microbundle": "^0.15.1",
    "mrm-task-jest": "^4.1.6",
    "mrm-task-typescript": "^4.1.6",
    "rimraf": "^3.0.2",
    "ts-jest": "^29.0.3",
    "typescript": "^4.8.4"
  },
  "jest": {
    "testPathIgnorePatterns": [
      "/node_modules/",
      "<rootDir>/lib/"
    ],
    "transform": {
      "^.+\\.tsx?$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json"
    ]
  }
}
